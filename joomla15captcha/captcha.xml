<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="system">
    <name>System - Captcha</name>
    <author>Victor Grusin (Kupala.Net)</author>
    <creationDate>April 2009</creationDate>
    <copyright>(C) 2009 Victor Grusin (Kupala.Net). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>joomlacode@kupala.net</authorEmail>
    <authorUrl>http://www.kupala.net</authorUrl>
    <version>4.5.1 Stable</version>
    <description>Captcha functions for Joomla</description>    
    <files>
        <filename plugin="captcha">captcha.php</filename>    
		<filename>captcha/index.html</filename>		
		<filename>captcha/showcode.php</filename>		
		<filename>captcha/playcode.php</filename>		
		<filename>captcha/files/index.html</filename>		
		<filename>captcha/files/DessinImmortel.ttf</filename>		
		<filename>captcha/files/accessibility.gif</filename>		
		<filename>captcha/files/en-gb.0.mp3</filename>		
		<filename>captcha/files/en-gb.1.mp3</filename>		
		<filename>captcha/files/en-gb.2.mp3</filename>		
		<filename>captcha/files/en-gb.3.mp3</filename>		
		<filename>captcha/files/en-gb.4.mp3</filename>		
		<filename>captcha/files/en-gb.5.mp3</filename>		
		<filename>captcha/files/en-gb.6.mp3</filename>		
		<filename>captcha/files/en-gb.7.mp3</filename>		
		<filename>captcha/files/en-gb.8.mp3</filename>		
		<filename>captcha/files/en-gb.9.mp3</filename>		
	</files>	
	<languages>		
		<language tag="en-GB">en-GB.plg_system_captcha.ini</language>
		<language tag="ru-RU">ru-RU.plg_system_captcha.ini</language>
		<language tag="uk-UA">uk-UA.plg_system_captcha.ini</language>
	</languages>
	<params description="See FAQ and details on http://code.google.com/p/joomla15captcha/" >
		<param name="lenght" type="list" label="Code lenght" default="4" description="">
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
		</param>
		<param name="layout" type="list" label="Code layout" default="Image" description="">
			<option value="image">Image</option>
			<option value="imagesound">Image Sound</option>
			<option value="sound">Sound</option>
		</param>
		<param name="mode" type="list" label="Crypt mode" default="0" description="">
			<option value="0">No</option>
		</param>
		<param name="reloads" type="list" label="Reload times" default="5" description="">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="xsize" type="text" size="5" default="100" label="Width in pixels" description="" />
		<param name="ysize" type="text" size="5" default="40" label="Height in pixels" description="" />
		<param name="usetemplatettf" type="radio" default="0" label="Use template font" description="DES_USE_FONT" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="textcolor" type="text" size="15" default="" label="Text color" description="" />
		<param name="backcolor" type="text" size="15" default="196,196,196" label="Background color" description="" />
		<param name="@spacer" type="spacer" default="Color(R,G,B) Sample: use '255,0,0' for Red color" label="" description="" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="donate" type="radio" default="0" label="Hide help info" description="DES_HIDE_HELP" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="help" type="radio" default="1" label="Set help link" description="" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="helpurl" type="text" size="30" default="http://code.google.com/p/joomla15captcha/" label="URL for help" description="" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="enabledcaptchas" type="text" size="30" default="" label="Enabled captchas" description="DES_LIST_OF_GROUPS" />
		<param name="hiddencaptchas" type="text" size="30" default="" label="Hidden captchas" description="DES_LIST_OF_GROUPS" />
		<param name="@spacer" type="spacer" default="Values: user.login, user.remind, user.reset, user.register, user.contact, user.poll, user.search, administrator.login, etc." label="" description="" />
	</params>
	<params group="advanced" description="See FAQ and details on http://code.google.com/p/joomla15captcha/">
		<param name="min_font_size" type="text" size="5" default="18" label="Min font size" description="" />
		<param name="max_font_size" type="text" size="5" default="24" label="Max font size" description="" />
		<param name="max_angle" type="text" size="5" default="0" label="Max angle" description="" />
		<param name="im_padding" type="text" size="5" default="5" label="Image padding" description="" />
		<param name="char_padding" type="text" size="5" default="5" label="Char padding" description="" />
		<param name="char_filling" type="text" size="5" default="/" label="Char for filling" description="" />
	</params>
</install>
